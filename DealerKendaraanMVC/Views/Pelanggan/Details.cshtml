@model DealerKendaraanMVC.Models.Produk

@{
    ViewData["Title"] = "MerkDetails";
}

<div class="text-center">
    <h1 class="py-3">
        <span style="border-radius: 20px; background-color: darkcyan; padding:10px 30px;">
            Kendaraan
        </span>
    </h1>

    <h2 class="text-light">Detail Data Kendaraan</h2>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gambar)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Gambar != null)
            {
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Gambar))" />
            } else
            {
                <span>No Image</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nama)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Warna)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Warna)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HargaSatuan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HargaSatuan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StokBarang)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StokBarang)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Merk)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Merk.Nama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pemasok)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pemasok.Alamat)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
