@model IEnumerable<DealerKendaraanMVC.Models.Produk>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h2 class="text-light">Rekomendasi</h2>
</div>

<div class="text-center" style="display: grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap: 0.5rem; ">
@foreach (var item in Model) {
        <a asp-action="Details" asp-route-id="@item.Id" class="p-4" style="background-color: steelblue; border-radius:30px; display:flex; gap: 0.5rem; flex-direction:column;">
            <div style="display: flex; flex-grow: 1; justify-content:center; align-items:center;">
                @if (item.Gambar != null)
                {
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Gambar))" style="max-width:100%;" />
                } else
                {
                    <span class="bg-primary">No Image</span>
                }
            </div>
            <button class="btn btn-primary">@Html.DisplayFor(modelItem => item.Nama)</button>
            <button class="btn btn-primary">Rp. @Html.DisplayFor(modelItem => item.HargaSatuan)</button>
        </a>
}
</div>

    
<div class="p-5" style="display: flex; justify-content:space-between;">
    <a asp-action="Create" class="btn btn-primary">Jual Motor</a>
    <a asp-action="Cari" class="btn btn-primary">Beli Motor</a>
</div>
